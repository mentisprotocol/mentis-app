{
  "name": "mentis-backend",
  "version": "1.0.0",
  "description": "Mentis Protocol - Autonomous infrastructure management backend",
  "main": "dist/index.js",
  "scripts": {
    "start": "node dist/index.js",
    "dev": "nodemon src/index.ts",
    "build": "tsc",
    "migrate": "node -e \"require('child_process').exec('psql $DATABASE_URL -f migrations/001_initial_schema.sql', (err, stdout, stderr) => { if (err) { console.error('Migration failed:', err); process.exit(1); } console.log('Migration completed successfully'); })\"",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "clean": "rm -rf dist"
  },
  "keywords": [
    "blockchain",
    "monitoring",
    "autonomous",
    "infrastructure",
    "ethereum",
    "solana",
    "cosmos",
    "validators",
    "nodes"
  ],
  "author": "Mentis Protocol",
  "license": "MIT",
  "dependencies": {
    "express": "^4.18.2",
    "socket.io": "^4.7.2",
    "pg": "^8.11.3",
    "redis": "^4.6.7",
    "jsonwebtoken": "^9.0.2",
    "bcryptjs": "^2.4.3",
    "joi": "^17.9.2",
    "cors": "^2.8.5",
    "helmet": "^7.0.0",
    "express-rate-limit": "^6.10.0",
    "winston": "^3.10.0",
    "node-cron": "^3.0.2",
    "ethers": "^6.7.1",
    "@solana/web3.js": "^1.78.4",
    "@cosmjs/stargate": "^0.32.0",
    "nodemailer": "^6.9.4",
    "axios": "^1.5.0",
    "dotenv": "^16.3.1",
    "@langchain/core": "^0.3.0",
    "@langchain/langgraph": "^0.2.3",
    "@langchain/openai": "^0.3.0",
    "@langchain/anthropic": "^0.3.0",
    "@langchain/community": "^0.3.0",
    "langchain": "^0.3.0"
  },
  "devDependencies": {
    "@types/node": "^20.5.0",
    "@types/express": "^4.17.17",
    "@types/jsonwebtoken": "^9.0.2",
    "@types/bcryptjs": "^2.4.2",
    "@types/cors": "^2.8.13",
    "@types/node-cron": "^3.0.8",
    "@types/nodemailer": "^6.4.9",
    "@types/jest": "^29.5.4",
    "@types/pg": "^8.10.2",
    "typescript": "^5.1.6",
    "nodemon": "^3.0.1",
    "ts-node": "^10.9.1",
    "jest": "^29.6.2",
    "ts-jest": "^29.1.1",
    "@typescript-eslint/eslint-plugin": "^6.4.0",
    "@typescript-eslint/parser": "^6.4.0",
    "eslint": "^8.47.0"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
